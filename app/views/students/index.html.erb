
<section class="vh-100" style="background-color: #9de2ff;">
  <div class='col-md-12'>
    <div class='col-md-6'>
      <h1>Students</h1> 
    </div>
    <div class='col-md-6 text-right'>
      <%= link_to 'New Student', new_student_path,  class: 'btn btn-primary text-right mt-5' %>
    </div>
  </div>
  <div class="h-100 p-2">
    <div class="row d-flex ">
      <% @students.each_with_index do |student, index| %>
      <div class="col-md-4 col-xl-4">

        <div class="card" style="border-radius: 15px; height: 100%;">
          <div class="card-body text-center">
            <div class="mt-3 mb-4">
              <%= image_tag url_for(student.profile_pic), class: "rounded-img img-fluid"  %>
            </div>
            <h4 class="mb-2"><%= student.name %></h4>
            <p class="text-muted mb-4"><%= link_to student.email, student %></p>
            <hr>
              <%= link_to 'Edit', edit_student_path(student), class: "btn btn-outline-primary" %>
              <%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-primary" %>
          </div>
        </div>

      </div>
    <% end %>
    </div>
  </div>
</section>