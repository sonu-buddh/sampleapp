<section class="vh-100" style="background-color: #9de2ff;">
    <div class="row">
      <div class="col-md-6">
        <h1>Profile</h1>
      </div>
      <div class="col-md-6 pull-right">
          <%= link_to 'Edit', edit_student_path(@student), class: "btn btn-primary float-right m-2" %>
          <%= link_to 'Back', students_path, class: "btn btn-primary float-right m-2" %>
      </div>
    </div>
  <div class="card col-md-6">
    <%= image_tag url_for(@student.profile_pic), class: 'card-img-top', style: "width: 100%; border-radius: 10px;" %>
      <div class="card-body">
        <h5 class="card-title"><%= @student.name %></h5>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><%= @student.email %></li>
      </ul>
  </div>
</section>
