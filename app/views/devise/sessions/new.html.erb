<section class="vh-100" style="background-color: #508bfc;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-2-strong" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">
            <h3 class="mb-5">Sign in</h3>
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

                <div class="form-outline mb-4">
                <%= f.email_field :email,placeholder: 'Email', class: "form-control form-control-lg", autofocus: true, autocomplete: "email" %>

                </div>

                <div class="form-outline mb-4">
                    <%= f.password_field :password, placeholder: 'Password', class: "form-control form-control-lg", autocomplete: "current-password" %>
                </div>
                    <%= f.submit "Log in", class: "btn btn-primary btn-lg btn-block" %>
              <% end %>
            <div class="card-body p-5 text-left">
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>